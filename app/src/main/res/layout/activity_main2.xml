<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFFCFD"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="228dp"
        android:layout_height="188dp"
        android:background="#EFFCFD"
        app:srcCompat="@drawable/img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnAsignaciones" />

    <Button
        android:id="@+id/btnAsignaciones"
        android:layout_width="305dp"
        android:layout_height="53dp"
        android:fontFamily="sans-serif-condensed"
        android:backgroundTint="#102C54"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:text="Ver Asignaciones del Dia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintBottom_toTopOf="@+id/btnHistorial" />

    <Button
        android:id="@+id/btnHistorial"
        android:layout_width="305dp"
        android:layout_height="53dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:backgroundTint="#102C54"
        android:textColor="@color/white"
        android:text="Historial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAsignaciones"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
